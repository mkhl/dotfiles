# -*- mode: default-generic -*-
# screen(1)

defutf8 on
defflow off
# deflogin off
defmonitor off
defscrollback 10000
startup_message off

altscreen on
autodetach on
compacthist on
crlf off
hardcopy_append on
silencewait 15

# Keybindings
escape ^bb
# Copy screen clipboard to mac clipboard
bind ^c eval "writebuf" "exec sh -c 'pbcopy < /tmp/screen-exchange'"
# Scroll with PgUp/PgDown
bindkey "^[[5~" eval "copy" "stuff ^u"
bindkey -m "^[[5~" stuff ^u
bindkey -m "^[[6~" stuff ^d

# Activity
activity "%0c activity -> %n%f %t"
bell_msg "%0c bell -> %n%f %t^G"
vbell_msg "*beep*"
vbell off

# Terminal Title
source $HOME/.screenrc_terminfo
# hardstatus string "$USER@%H | #%n | %t"
hardstatus alwayslastline "%{.g} [$USER@%H] %-w%{+b}%n:%t%{-b}%+w%=%0c %d%M%y "

# Default sessions
# screen 0 htop
# monitor off
# screen 1
