#  -*- mode: conf -*-

[diff]
git = True

[ui]
username = Martin Kuehl <martin.kuehl@gmail.com>

[extensions] 
bookmarks =
color =
extdiff =
fetch =
graphlog =
mq =
# pager =
rebase =
record =

[extdiff]
cmd.chdiff =
opts.chdiff = --wait
cmd.filemerge = opendiff

[merge-tools]
chdiff.args = $output $other
filemerge.executable = opendiff
filemerge.args = $local $other -ancestor $base -merge $output

[defaults]
glog = --template 'changeset:   {rev}:{node|short} {tags}\nsummary:     {desc|firstline|fill68|tabindent|tabindent}\n\n'

[alias]
addrenames = addremove --similarity 100
nudge = push --rev .
show = log --color --patch --rev
slog = log --template '{rev}:{node|short} {desc|firstline}\n'
