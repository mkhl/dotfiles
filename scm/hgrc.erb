# -*- mode: conf -*-
# hg(1)

[diff]
git = True

[ui]
username = Martin KÃ¼hl <martin.kuehl@gmail.com>
ignore = ~/.hgignore

[extensions]
bookmarks =
color =
extdiff =
fetch =
graphlog =
hggit =
mq =
pager =
progress =
rebase =
record =
schemes =
transplant =

[extdiff]
cmd.chdiff =
opts.chdiff = --wait
cmd.opendiff =
cmd.ksdiff = /usr/local/bin/ksdiff-wrapper
opts.ksdiff = hg

[merge-tools]
chdiff.args = $output $other
opendiff.args = $local $other -ancestor $base -merge $output

[schemes]
gh = git://github.com/
ghs = git+ssh://git@github.com/
bbs = ssh://hg@bitbucket.org/

[defaults]
glog = --template 'changeset:   {rev}:{node|short} {tags}\nsummary:     {desc|firstline|fill68|tabindent|tabindent}\n\n'

[alias]
addrenames = addremove --similarity 100
nudge = push --rev .
show = log --patch --rev
slog = log --template '{rev}:{node|short} {desc|firstline}\n'
