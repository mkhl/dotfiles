[bb]
username = mkhl
password = <%= YAML::load_file(ENV['CONFIG'])['bitbucket_pwd'] %>

[bookmarks]
track.current = True

[diff]
git = True

[extdiff]
cmd.opendiff =
cmd.chdiff =
opts.chdiff = --wait

[merge-tools]
chdiff.args = $output $other
opendiff.args = $local $other -ancestor $base -merge $output

[schemes]
gh  = git://github.com/
ghs = git+ssh://git@github.com/
bbs = ssh://hg@bitbucket.org/

[defaults]
addremove = --similarity 100
glog = --template '{rev}:{node|short} {desc|firstline}\n'

[alias]
slog = log --template '{rev}:{node|short} {desc|firstline}\n'
show = log --verbose --patch --rev
nudge = push --branch .
ignored = status --no-status --ignored
unknown = status --no-status --unknown
d = diff
s = status --quiet
cm = commit --message
br = branches
rb = rebase
rba = rebase --abort
rbc = rebase --continue
? = summary

# Simple bug/todo tracking
# Idea from Justin: http://gist.github.com/464871
# Install t first: http://bitbucket.org/sjl/t/
bug  = !t --task-dir="`"$HG" root`" --list=BUGS "$@"
todo = !t --task-dir="`"$HG" root`" --list=TODO "$@"
