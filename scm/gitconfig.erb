[man.ManOpen]
    cmd = openman

[man.Bwana]
    cmd = bwana

[core]
    excludesfile = $HOME/.gitexcludes

[rerere]
    enabled = 1

[alias]
    outgoing = cherry -v
    ignored = ls-files --others --exclude-standard
    chainsaw = rebase --interactive
    st = status
    co = checkout
    ci = commit
    cp = cherry-pick
    fp = format-patch
    br = branch
    bs = bisect
    msg = commit --allow-empty --message
    glog = log --graph --pretty=format:'changeset:   %h %d%nsummary:     %s%n%n' --abbrev-commit
    slog = log --oneline
