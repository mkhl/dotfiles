# -*- mode: conf -*-
# git(1)

[user]
	name = Martin KÃ¼hl
	email = martin.kuehl@gmail.com

[github]
	user = mkhl
	token = <%= YAML::load_file(ENV['CONFIG'])['github_token'] %>

[url "git@github.com:mkhl/"]
	insteadOf = "git://github.com/mkhl/"

[core]
	excludesfile = ~/.gitignore

[color]
	ui = auto

[help]
	# format = web

[branch]
	autosetupmerge = true

[push]
	default = tracking

[rerere]
	enabled = true

[diff]
	mnemonicprefix = true
	renames = copies
	tool = opendiff

[difftool]
	prompt = false

[merge]
	tool = opendiff

[mergetool]
	prompt = false

[alias]
	chainsaw = rebase --interactive
	missing = rev-list --pretty=oneline --reverse "^HEAD" origin
	pending = log origin/master..master
	unpushed = log origin..HEAD
	outgoing = cherry -v
	ignored = ls-files --ignored --others --exclude-standard
	unmerged = ls-files --unmerged --exclude-standard
	untracked = ls-files --others --exclude-standard
	amend = commit --amend -C HEAD
	undo = reset --soft HEAD^
	unstage = reset HEAD
	wdiff = diff --word-diff
	slog = log --oneline --decorate
	glog = log --oneline --decorate --graph
	msg = commit --allow-empty --message
	out = cherry -v
	uns = reset HEAD
	b = branch
	d = diff
	h = help
	l = log --oneline --decorate
	r = remote
	s = status --short --branch
	st = status
	a = add
	aa = add --all
	ae = add --edit
	ai = add --interactive
	ap = add --patch
	au = add --update
	co = checkout
	cb = checkout -b
	ci = commit
	ca = commit --amend
	cm = commit --message
	cia = commit --all
	cma = commit --all --message
	cp = cherry-pick
	fp = format-patch
	br = branch
	bs = bisect
	ds = diff --staged
	wd = diff --word-diff
	dt = difftool
	mt = mergetool
	rb = rebase
	irb = rebase --interactive
	rba = rebase --abort
	rbc = rebase --continue
	rbs = rebase --skip
	sm = submodule
	sma = submodule add
	smu = submodule update --init
	sub = submodule
	sts = stash save
	stc = stash clear
	stl = stash list
	stp = stash pop
