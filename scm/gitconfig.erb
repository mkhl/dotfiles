#  -*- mode: conf -*-

[user]
	name = Martin KÃ¼hl
	email = martin.kuehl@gmail.com

[github]
	user = mkhl
	token = <%= $config[:github_token] %>

[url "git@github.com:mkhl/"]
	insteadOf = "git://github.com/mkhl/"

[branch]
	autosetupmerge = true

[color]
	ui = auto

[help]
	# format = web

[man]
	# viewer = openman

[man.openman]
	cmd = openman

[diff]
	tool = opendiff

[difftool]
	prompt = false

[difftool "ksdiff"]
	cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"

[merge]
	tool = opendiff

[mergetool]
	prompt = false

[core]
	excludesfile = $HOME/.gitexcludes

[rerere]
	enabled = 1

[alias]
	chainsaw = rebase --interactive
	outgoing = cherry -v
	ignored = ls-files --others --exclude-standard
	pending = log origin/master..master
	missing = rev-list --pretty=oneline --reverse "^HEAD" origin
	unpushed = log origin..HEAD
	st = status
	co = checkout
	ci = commit
	ca = commit --amend
	cp = cherry-pick
	fp = format-patch
	br = branch
	bs = bisect
	dt = difftool
	mt = mergetool
	rb = rebase
	irb = rebase --interactive
	rbc = rebase --continue
	rba = rebase --abort
	rbs = rebase --skip
	sub = submodule
	msg = commit --allow-empty --message
	glog = log --graph --pretty=format:'changeset:	 %h %d%nsummary:	 %s%n%n' --abbrev-commit
	slog = log --oneline
