    email = martin.kuehl@gmail.com

[github]
    user = mkhl
    token = <%= $config[:github_token] %>

[url "git@github.com:mkhl/"]
    insteadOf = "git://github.com/mkhl/"

[branch]
    autosetupmerge = true

[color]
    ui = auto

[help]
    # format = web

[man]
    # viewer = openman

[man.openman]
    cmd = openman

[diff]
    tool = opendiff

[difftool]
    prompt = false

[merge]
    tool = opendiff

[mergetool]
    prompt = false

[core]
    excludesfile = $HOME/.gitexcludes

[rerere]
    enabled = 1

[alias]
    outgoing = cherry -v
    ignored = ls-files --others --exclude-standard
    chainsaw = rebase --interactive
    st = status
    co = checkout
    ci = commit
    cp = cherry-pick
    fp = format-patch
    br = branch
    bs = bisect
    msg = commit --allow-empty --message
    glog = log --graph --pretty=format:'changeset:   %h %d%nsummary:     %s%n%n' --abbrev-commit
    slog = log --oneline
