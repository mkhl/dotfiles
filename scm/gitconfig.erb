#  -*- mode: conf -*-

[user]
    name = Martin Kuehl
    email = martin.kuehl@gmail.com
[github]
    user = mkhl
    token = <%= $config[:github_token] %>
[color]
    ui = auto
[help]
   format = web
[man]
#    viewer = ManOpen
[man.ManOpen]
    cmd = openman
[man.Bwana]
    cmd = bwana
[core]
    excludesfile = $HOME/.gitexcludes
[alias]
# The name 'push?' is not supported
    needs-pushing = cherry -v origin/master
    ignored = ls-files --others --exclude-standard
    chainsaw = rebase --interactive
    st = status
    co = checkout
    ci = commit
    cp = cherry-pick
    fp = format-patch
    bs = bisect
    np = needs-pushing
    publish = !ruby $HOME/lib/gx/git-publish.rb
    update = !ruby $HOME/lib/gx/git-update.rb
    glog = log --graph --pretty=format:'changeset:   %h %d%nsummary:     %s%n%n' --abbrev-commit
    slog = log --oneline

