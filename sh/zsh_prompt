#!/bin/zsh
#
# zsh_prompt
# zsh-specific prompting
autoload -U promptinit
promptinit

# Helper definitions
PS_ARROW=">"
PS_DIRTY="*"
PS_FAIL="!"
PS_WINDOW=""
if [[ -n "$WINDOW" ]]; then
    PS_WINDOW="#$WINDOW:"
fi

# Set the prompt
prompt="$PS_WINDOW%~$PS_ARROW "

# Set the title
precmd () {
    print_term_title "%n@%m | $is:%~"
}
